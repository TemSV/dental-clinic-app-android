<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <ImageView
        android:id="@+id/patient_icon_image_view"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        tools:background="@color/light_grey" />

    <TextView
        android:id="@+id/patient_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/patient_icon_image_view"
        app:layout_constraintTop_to="@id/patient_icon_image_view"
        app:layout_constraintRight_toRightOf="parent"
        tools:text = "laekdaposlkda"
        app:layout_constrainedWidth="true"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>