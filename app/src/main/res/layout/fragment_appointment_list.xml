<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/smoky_white"
    tools:context=".main.doctor.appointment.presentation.AppointmentListFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appointment_list_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/event_app_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:titleTextColor="@color/black"
            app:title="@string/appointments"
            app:titleCentered="true" />
    </com.google.android.material.appbar.AppBarLayout>


    <RadioGroup
        android:id="@+id/chipGroup2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:checkedButton="@id/actual_appointment"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_appointment_switch"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointment_list_bar">

        <RadioButton
            android:id="@+id/actual_appointment"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/selector_appointment_switch_background"
            android:button="@null"
            android:gravity="center"
            android:text="@string/actual"
            android:textColor="@drawable/selector_appointment_switch_text" />

        <RadioButton
            android:id="@+id/finished_appointment"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/selector_appointment_switch_background"
            android:button="@null"
            android:gravity="center"
            android:text="@string/completed"
            android:textColor="@drawable/selector_appointment_switch_text" />
    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/appointment_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipGroup2"
        tools:itemCount="5"
        tools:listitem="@layout/item_appointment" />


</androidx.constraintlayout.widget.ConstraintLayout>
