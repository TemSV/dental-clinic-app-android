<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/degree_text_color"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        android:maxWidth="230dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Бакалавриат"
        />
    <TextView
        android:id="@+id/educational_institution"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:textColor="@color/educational_institution_text_color"
        android:ellipsize="end"
        android:maxLines="4"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/degree"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Санкт-Петербургский политехнический университет Петра Великого (СПбПУ)"
        />
    <TextView
        android:id="@+id/years"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/years_text_color"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        android:maxWidth="90dp"
        app:layout_constraintTop_toTopOf="@id/degree"
        app:layout_constraintStart_toEndOf="@id/educational_institution"

        app:layout_constraintBottom_toBottomOf="@id/educational_institution"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40dp"
        tools:text="2010-2014"
        />
</androidx.constraintlayout.widget.ConstraintLayout>