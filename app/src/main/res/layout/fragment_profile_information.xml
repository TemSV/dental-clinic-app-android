<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.doctor.profile.ProfileInformationFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/profile_information_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/event_app_bar_bg_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/profile_information_app_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/event_app_bar_bg_color"
            app:navigationIcon="@drawable/ic_back"
            app:title="@string/profile_information_app_bar_name"
            app:titleCentered="true" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/user_info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_information_bar" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/black" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                >
                <TextView
                    android:id="@+id/profile_username"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textSize="18sp"
                    tools:text="Иванов Александр Дмитриевич"
                    android:ellipsize="end"
                    android:textColor="@color/profile_username_text_color"
                    />
                <TextView
                    android:id="@+id/user_profession"
                    app:layout_constraintTop_toBottomOf="@id/profile_username"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_bias="0"
                    android:maxLines="1"
                    android:textSize="12sp"
                    tools:text="Стоматолог"
                    android:ellipsize="end"
                    android:textColor="@color/user_profession_text_color"
                    />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/center_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <TextView
                    android:id="@+id/user_rating"
                    app:layout_constraintTop_toBottomOf="@id/user_profession"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="@+id/center_guideline"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="10sp"
                    tools:text="Рейтинг: 4,5"
                    android:ellipsize="end"
                    android:textColor="@color/user_rating_text_color"
                    />
                <TextView
                    android:id="@+id/user_experience"
                    app:layout_constraintTop_toTopOf="@id/user_rating"
                    app:layout_constraintLeft_toLeftOf="@+id/center_guideline"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="10sp"
                    android:layout_marginStart="10dp"
                    tools:text="Стаж: 40 лет"
                    android:ellipsize="end"
                    android:textColor="@color/user_experience_text_color"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/first_profile_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="@id/user_info_card"
        app:layout_constraintEnd_toEndOf="@id/user_info_card"
        app:layout_constraintTop_toBottomOf="@id/user_info_card" />

    <TextView
        android:id="@+id/profile_city"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/first_profile_divider"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Санкт-Петербург"
        app:layout_constrainedWidth="true"
        android:textColor="@color/profile_city_text_color"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/map_marker"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_map_marker"
        app:layout_constraintTop_toBottomOf="@id/profile_city"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/profile_city"
        android:contentDescription="@string/map_marker_description" />

    <TextView
        android:id="@+id/clinic_address"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/map_marker"
        app:layout_constraintBottom_toBottomOf="@id/map_marker"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/map_marker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Клиника “Название” ул. Политехническая д. 29"
        app:layout_constrainedWidth="true"
        android:textColor="@color/profile_city_text_color"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/mapWithClinics"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/clinic_address"
        />

    <View
        android:id="@+id/second_profile_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="@id/mapWithClinics"
        app:layout_constraintEnd_toEndOf="@id/mapWithClinics"
        app:layout_constraintTop_toBottomOf="@id/mapWithClinics" />

    <TextView
        android:id="@+id/profile_education_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/second_profile_divider"
        app:layout_constraintStart_toStartOf="@id/second_profile_divider"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_bias="0"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/profile_education_label"
        app:layout_constrainedWidth="true"
        android:textColor="@color/profile_education_label_text_color"
        android:textSize="16sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/education_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedHeight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        tools:listitem="@layout/education_item"
        app:layout_constraintTop_toBottomOf="@id/profile_education_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_information_btn"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:textSize="12sp"
        android:textColor="@color/edit_information_btn_text_color"
        android:id="@+id/edit_information_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_events_btn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>