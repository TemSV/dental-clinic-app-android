<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profile_information_bg_color"
    tools:context=".main.doctor.profile.information.ProfileInformationFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/profile_information_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/background_color_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/profile_information_app_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/background_color_primary"
            android:theme="@style/ProfileInformationToolbarTheme"
            app:menu="@menu/profile_information_app_bar"
            app:navigationIcon="@drawable/ic_back">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_information_app_bar_name"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_information_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/user_info_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                app:cardElevation="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_avatar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/img_doctor"
                        app:layout_constraintBottom_toBottomOf="@id/all_personal_info_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/all_personal_info_container" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/all_personal_info_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toEndOf="@id/profile_avatar"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/profile_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/ubuntu_bold"
                            android:letterSpacing=".0"
                            android:maxLines="2"
                            android:text="Иванов Александр Дмитриевич"
                            android:textColor="@color/profile_username_text_color"
                            android:textSize="22sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/user_profession"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/ubuntu_regular"
                            android:letterSpacing=".0"
                            android:maxLines="1"
                            android:text="Стоматолог"
                            android:textColor="@color/user_profession_text_color"
                            android:textSize="18sp"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/profile_username" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/center_guideline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintGuide_percent="0.5"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/user_rating"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="10dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/ubuntu_medium"
                            android:letterSpacing=".0"
                            android:maxLines="1"
                            android:text="Рейтинг: 4,5"
                            android:textColor="@color/user_rating_text_color"
                            android:textSize="16sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="@+id/center_guideline"
                            app:layout_constraintTop_toBottomOf="@id/user_profession"
                            tools:ignore="SmallSp" />

                        <TextView
                            android:id="@+id/user_experience"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/ubuntu_medium"
                            android:letterSpacing=".0"
                            android:maxLines="1"
                            android:text="Стаж: 40 лет"
                            android:textColor="@color/user_experience_text_color"
                            android:textSize="16sp"
                            app:layout_constraintLeft_toLeftOf="@+id/center_guideline"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/user_rating"
                            tools:ignore="SmallSp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/first_profile_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:background="?attr/color_divider"
                app:layout_constraintEnd_toEndOf="@id/user_info_card"
                app:layout_constraintStart_toStartOf="@id/user_info_card"
                app:layout_constraintTop_toBottomOf="@id/user_info_card" />

            <TextView
                android:id="@+id/profile_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:ellipsize="end"
                android:fontFamily="@font/ubuntu_medium"
                android:letterSpacing=".0"
                android:maxLines="1"
                android:text="Санкт-Петербург"
                android:textColor="@color/profile_city_text_color"
                android:textSize="20sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/first_profile_divider" />

            <ImageView
                android:id="@+id/map_marker"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/map_marker_description"
                android:src="@drawable/ic_map_marker"
                app:layout_constraintStart_toStartOf="@id/profile_city"
                app:layout_constraintTop_toBottomOf="@id/profile_city"
                app:tint="@color/map_marker_color" />

            <TextView
                android:id="@+id/clinic_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:fontFamily="@font/ubuntu_regular"
                android:letterSpacing=".0"
                android:maxLines="1"
                android:text="Клиника “Название” ул. Политехническая д. 29"
                android:textColor="@color/profile_address_text_color"
                android:textSize="16sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@id/map_marker"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/map_marker"
                app:layout_constraintTop_toTopOf="@id/map_marker" />

            <androidx.cardview.widget.CardView
                android:id="@+id/mapWithClinics"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clinic_address">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_map" />
            </androidx.cardview.widget.CardView>


            <View
                android:id="@+id/second_profile_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:background="?attr/color_divider"
                app:layout_constraintEnd_toEndOf="@id/mapWithClinics"
                app:layout_constraintStart_toStartOf="@id/mapWithClinics"
                app:layout_constraintTop_toBottomOf="@id/mapWithClinics" />

            <TextView
                android:id="@+id/profile_education_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ellipsize="end"
                android:fontFamily="@font/ubuntu_medium"
                android:letterSpacing=".0"
                android:maxLines="1"
                android:text="@string/profile_education_label"
                android:textColor="@color/profile_education_label_text_color"
                android:textSize="20sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/second_profile_divider"
                app:layout_constraintTop_toBottomOf="@id/second_profile_divider" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/education_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_education_label"
                app:layout_constraintVertical_bias="0"
                tools:listitem="@layout/item_education" />

            <TextView
                android:id="@+id/edit_information_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/ubuntu_medium"
                android:letterSpacing=".0"
                android:onClick="onClick"
                android:text="@string/edit_information_btn"
                android:textColor="@color/edit_information_btn_text_color"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/education_container" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
