<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?background_color_secondary"
    android:layout_marginBottom="4sp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_patient_icon_image_view"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        tools:background="?attr/background_color_fivefold" />

    <TextView
        android:id="@+id/chat_patient_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/chat_patient_icon_image_view"
        app:layout_constraintTop_toTopOf="@id/chat_patient_icon_image_view"
        tools:text = "Юлия Иванова"
        app:layout_constrainedWidth="true"
        android:textSize="16sp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/ubuntu_medium" />

    <TextView
        android:id="@+id/chat_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Вчера"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toTopOf="@id/chat_patient_name_text_view"
        android:textSize="14sp"
        android:textColor="@color/chat_list_date_color"
        android:fontFamily="@font/ubuntu_regular"/>

    <TextView
        android:id="@+id/chat_text_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/chat_patient_icon_image_view"
        android:layout_marginStart="16sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toBottomOf="@id/chat_patient_name_text_view"
        app:layout_constraintLeft_toLeftOf="@id/chat_patient_name_text_view"
        app:layout_constraintEnd_toStartOf="@id/chat_date_text_view"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginEnd="24dp"
        android:textSize="14sp"
        android:fontFamily="@font/ubuntu_regular"
        tools:text="текст сообщения текст сообщения текст сообщения текст сообщения текст сообщения "
        android:layout_marginTop="4dp"/>

    <View
        android:id="@+id/chat_horizontal_layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/chat_patient_icon_image_view"
        app:layout_constraintLeft_toLeftOf="@id/chat_patient_name_text_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        android:background="?attr/background_color_fivefold"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
