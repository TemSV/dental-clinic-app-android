<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/smoky_white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_patient_icon_image_view"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        tools:background="@color/light_grey" />

    <TextView
        android:id="@+id/chat_patient_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/chat_patient_icon_image_view"
        app:layout_constraintTop_toTopOf="@id/chat_patient_icon_image_view"
        tools:text = "Юлия Иванова"
        app:layout_constrainedWidth="true"
        android:textSize="16sp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/ubuntu_medium"/>

    <TextView
        android:id="@+id/chat_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="вчера"
        app:layout_constraintTop_toTopOf="@id/chat_patient_name_text_view"
        android:textSize="12sp"
        android:textColor="@color/chat_list_date_color"
        android:fontFamily="@font/ubuntu_regular"/>

    <TextView
        android:id="@+id/chat_text_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/chat_date_text_view"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toBottomOf="@id/chat_patient_name_text_view"
        app:layout_constraintLeft_toLeftOf="@id/chat_patient_name_text_view"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginEnd="24dp"
        android:textSize="14sp"
        android:fontFamily="@font/ubuntu_regular"
        tools:text="текст текст текст текст текст текс текст текст текст текст текст текст тектс текст текс тек сткетк тнкотктекьтеулокетуко "/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/chat_patient_icon_image_view"
        app:layout_constraintLeft_toLeftOf="@id/chat_patient_name_text_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        android:background="@color/light_grey"/>

</androidx.constraintlayout.widget.ConstraintLayout>
