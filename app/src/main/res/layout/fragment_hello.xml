<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/HelloFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color_tertiary"
    tools:context=".auth.HelloFragment">

    <ImageView
        android:id="@+id/logo_hello"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginBottom="70dp"
        android:src="@drawable/ic_logo_small"
        android:contentDescription="@string/logo_description"
        app:layout_constraintBottom_toTopOf="@+id/hello_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hello_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="30dp">

        <TextView
            android:id="@+id/text_hello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_to_user"
            android:textAlignment="center"
            android:textAppearance="@style/label_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_hello_invitation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/message_to_user"
            android:textAlignment="center"
            android:textAppearance="@style/simple_text"
            app:layout_constraintTop_toBottomOf="@id/text_hello" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/selector_enter_button_main"
            android:text="@string/entry"
            android:textAppearance="@style/button_text"
            app:layout_constraintStart_toStartOf="@id/text_hello_invitation"
            app:layout_constraintTop_toBottomOf="@id/text_hello_invitation" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/selector_enter_button_additional"
            android:text="@string/registration"
            android:textAppearance="@style/button_text"
            android:textColor="?attr/text_color_primary"
            app:layout_constraintStart_toStartOf="@id/btn_entry"
            app:layout_constraintTop_toBottomOf="@id/btn_entry" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
