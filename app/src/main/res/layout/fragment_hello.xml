<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/HelloFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".auth.HelloFragment">

    <TextView
        android:id="@+id/HelloText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/hello_to_user"
        android:textAppearance="@style/label_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/union" />

    <TextView
        android:id="@+id/HelloText2"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/message_to_user"
        android:textAlignment="center"
        android:textAppearance="@style/simple_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HelloText" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/EntryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/selector_enter_button_main"
        android:text="@string/entry"
        android:textAppearance="@style/button_text"
        app:layout_constraintStart_toStartOf="@+id/HelloText2"
        app:layout_constraintTop_toBottomOf="@+id/HelloText2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/RegistrationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/selector_enter_button_additional"
        android:text="@string/registration"
        android:textAppearance="@style/button_text"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/EntryButton"
        app:layout_constraintTop_toBottomOf="@+id/EntryButton" />



    <ImageView
        android:id="@+id/union"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_logo_small"
        android:layout_marginStart="155dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="155dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
