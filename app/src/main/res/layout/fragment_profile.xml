<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/profile_bg_color">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/name_card"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="25dp"
        app:cardElevation="13dp"
        app:cardCornerRadius="20dp"
        android:background="@color/name_card_bg_color"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="45dp"
                android:layout_marginTop="45dp"
                android:src="@drawable/ic_default_avatar" />

            <TextView
                android:id="@+id/name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/avatar"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="36dp"
                android:layout_marginStart="16dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textSize="18sp"
                android:textColor="@color/name_text_color"
                tools:text="Иванов Александр ДмитриевичИванов Александр ДмитриевичИванов Александр Дмитриевич" />

            <TextView
                android:id="@+id/information"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/name"
                app:layout_constraintTop_toBottomOf="@id/name"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="14sp"
                android:textColor="@color/information_text_color"
                tools:text="Санкт-петербург, 37 лет" />

            <ImageButton
                android:id="@+id/go_to_profile_btn"
                android:src="@drawable/ic_next"
                android:background="@color/name_card_bg_color"
                android:layout_height="24dp"
                android:layout_width="24dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/go_to_profile_btn_desc" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/schedule_card"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="8dp"
        android:background="@color/schedule_card_bg_color"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/name_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/schedule_label"
                android:layout_width="107dp"
                android:layout_height="21dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="18sp"
                tools:textColor="@color/schedule_label_text_color"
                android:text="@string/schedule_label_text" />

            <TextView
                android:id="@+id/current_data"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintLeft_toLeftOf="@id/schedule_label"
                app:layout_constraintTop_toBottomOf="@id/schedule_label"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="12sp"
                tools:textColor="@color/current_data_text_color"
                tools:text="Март 2023" />

            <ImageButton
                android:id="@+id/go_to_schedule_btn"
                android:src="@drawable/ic_edit"
                android:background="@color/schedule_card_bg_color"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/edit_schedule_btn_desc" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/portfolio_card"
        android:layout_width="0dp"
        android:layout_height="59dp"
        app:layout_constraintRight_toRightOf="@id/center_guideline"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toBottomOf="@id/schedule_card"
        app:layout_constraintLeft_toLeftOf="@id/schedule_card"
        android:background="@color/portfolio_card_bg_color"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/portfolio_label"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/portfolio_label_text"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/portfolio_label_text_color" />

            <ImageButton
                android:id="@+id/go_to_portfolio_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:background="@color/name_card_bg_color"
                android:contentDescription="@string/go_to_portfolio_btn_desc"
                android:src="@drawable/ic_next"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/review_card"
        android:layout_width="0dp"
        android:layout_height="59dp"
        app:layout_constraintLeft_toRightOf="@id/center_guideline"
        app:layout_constraintTop_toTopOf="@id/portfolio_card"
        app:layout_constraintRight_toRightOf="@id/schedule_card"
        android:layout_marginStart="4dp"
        android:background="@color/review_card_bg_color"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/review_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="@color/portfolio_label_text_color"
                android:text="@string/review_label_text" />

            <ImageButton
                android:id="@+id/go_to_review_btn"
                android:src="@drawable/ic_next"
                android:background="@color/name_card_bg_color"
                android:layout_height="24dp"
                android:layout_width="24dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/go_to_portfolio_btn_desc" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/event_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/events_label_text"
        app:layout_constraintTop_toBottomOf="@id/portfolio_card"
        android:textColor="@color/events_label_text_color"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/portfolio_card"
        android:layout_marginTop="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/events_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/see_more_events"
        app:layout_constraintLeft_toLeftOf="@id/schedule_card"
        app:layout_constraintRight_toRightOf="@id/schedule_card"
        app:layout_constraintTop_toBottomOf="@id/event_label"
        app:layout_constraintVertical_bias="0"
        android:layout_marginBottom="10dp"
        app:layout_constrainedHeight="true"
        android:layout_marginTop="10dp" />

    <Button
        android:textSize="12sp"
        android:textColor="#818181"
        android:id="@+id/see_more_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_events_btn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
