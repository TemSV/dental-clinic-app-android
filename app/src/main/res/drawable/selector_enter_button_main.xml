<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="61dp" />

            <solid android:color="?attr/background_color_primary" />
            <size
                android:width="360dp"
                android:height="70dp" />
        </shape>
</item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="61dp" />

            <solid android:color="?attr/background_color_quaternary" />
            <size
                android:width="360dp"
                android:height="70dp" />
        </shape>
    </item>
<item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="61dp" />

            <solid android:color="?attr/background_color_quaternary" />
            <size
                android:width="360dp"
                android:height="70dp" />
        </shape>
</item>
<item>
        <shape android:shape="rectangle">
            <corners android:radius="61dp" />

            <solid android:color="?attr/background_color_primary" />
            <size
                android:width="360dp"
                android:height="70dp" />
        </shape>
</item>
</selector>
